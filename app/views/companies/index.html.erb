<h1>Listing companies</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Manager</th>
          <th>Status</th>
          <th>Terms</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.manager %></td>
            <td><%= company.status %></td>
            <td><%= company.terms %></td>
            <td><%= link_to 'Show', company, :class => "btn btn-xs btn-info" %></td>
            <td><%= link_to 'Edit', edit_company_path(company), :class => "btn btn-xs btn-success" %></td>
            <td><%= link_to 'Destroy', company, method: :delete, :class => "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr style=" height: 12px; border: 0; box-shadow: inset 0 12px 12px -12px rgba(0,0,0,0.5); " >

<h2>Import Companies</h2>
<%= form_tag import_companies_path, multipart: true do %>
<p>
  <%= file_field_tag :file %> <br/>
  <%= submit_tag "Upload Companies" %>
</p>
<%end%>

<%= link_to 'New Company', new_company_path, :class => "btn btn-xs btn-black" %><br/><br/>
