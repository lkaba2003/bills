<h1>Listing invoices</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Company</th>
          <th>Tax</th>
          <th>Employee name</th>
          <th>Employee</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @invoices.each do |invoice| %>
          <tr>
            <td><%= invoice.date %></td>
            <td><%= invoice.company %></td>
            <td><%= invoice.tax %></td>
            <td><%= invoice.employee_name %></td>
            <td><%= invoice.employee_id %></td>
            <td><%= link_to 'Show', invoice, :class => "btn btn-xs btn-info" %></td>
            <td><%= link_to 'Edit', edit_invoice_path(invoice), :class => "btn btn-xs btn-success" %></td>
            <td><%= link_to 'Destroy', invoice, method: :delete, :class => "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 

<br>

<%= link_to 'New Invoice', new_invoice_path, :class => "btn btn-xs btn-black" %> <br/><br/>
