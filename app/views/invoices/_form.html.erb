<%= form_for(@invoice) do |f| %>
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% @invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :company %><br>
    <%= f.text_field :company %>
  </div>
  <div class="field">
    <%= f.label :tax %><br>
    <%= f.text_field :tax %>
  </div>
  <div class="field">
    <%= f.label :employee_name %><br>
    <%= f.text_field :employee_name %>
  </div>
  <div class="field">
    <%= f.label "employee id" %><br>
    <%= f.number_field :employee_id, placeholder: "Enter or select id" %>
  </div>

  <div class="field">
    <%= f.label "Status" %><br>
    <%= f.select(:status_type, options_for_select([['Paid', 'Paid'], ['Pending', 'Pending']]), {include_blank: 'Select the status' }) %>
  </div><br/>

  <div class="actions">
    <%= f.submit %>
  </div><br/>
<% end %>
